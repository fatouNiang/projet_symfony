{% extends 'base.html.twig' %}

{% block title %}Liste des Chambres{% endblock %}

{% block body %}

    <div class="container d-flex justify-content-center">
        <div class="row bg-light mt-5">
            <div class="col-12 d-flex justify-content-center font-weight-bold titre">Liste des Chambres</div>
                <div class="col-12 ">
                    <table class="table table-striped table-inverse table-responsive tChambre">
                        <thead class="thead-inverse">
                            <tr>
                                <th>numero</th>
                                <th>numeroBat</th>
                                <th>type</th>
                                <th colspan="2">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for chambre in chambres %}
                                <tr>
                                    <td scope="row">{{chambre.numero}}</td>
                                    <td>{{chambre.numeroBat}}</td>
                                    <td>{{chambre.type}}</td>
                                    <td><a href="{{path('edit_chambre', {'id': chambre.id})}}" class="btn btn-outline-info my-2 my-sm-0" type="submit">modifier</a></td>
                                    <td><a class="btn btn-danger" href="{{ path('chambre_delete', {'id': chambre.id}) }}" onclick="return confirm ('delete???');">supprimer</a></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                    <div class="w-100 pt-4 d-flex justify-content-center">
                        {{ knp_pagination_render(chambres) }}
                    </div>
                </div>
            </div>
        </div>      
    </div>
{% endblock %}
